<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Sort By Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort By"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/sortByGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/sortDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance"
            android:checked="true" />

        <RadioButton
            android:id="@+id/sortRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rating" />

        <RadioButton
            android:id="@+id/sortFee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fee" />

    </RadioGroup>

    <!-- Distance Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Distance"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 km"
        android:textColor="@color/primary"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/distanceSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="5"
        android:valueTo="100"
        android:value="50"
        android:stepSize="5"
        android:layout_marginBottom="16dp" />

    <!-- Rating Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Rating"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ratingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 stars and above"
        android:textColor="@color/primary"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/ratingSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="5"
        android:value="0"
        android:stepSize="0.5"
        android:layout_marginBottom="16dp" />

    <!-- Fee Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Consultation Fee"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up to â‚¹2000"
        android:textColor="@color/primary"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/feeSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="200"
        android:valueTo="5000"
        android:value="2000"
        android:stepSize="100" />

</LinearLayout>