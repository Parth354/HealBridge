<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <queries>
        <package android:name="com.google.android.gms" />
        <package android:name="com.android.vending" />
        <package android:name="com.google.android.apps.docs" />
    </queries>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logofull"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logofull"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealBridge"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.HealBridge"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserDetails"
            android:theme="@style/Theme.HealBridge"
            android:exported="false" />
        <activity
            android:name=".Home"
            android:theme="@style/Theme.HealBridge"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.HealBridge"
            android:exported="false" />
        <activity
            android:name=".ui.search.DoctorSearchActivity"
            android:theme="@style/Theme.HealBridge"
            android:exported="false" />
        <activity
            android:name=".ui.booking.BookAppointmentActivity"
            android:theme="@style/Theme.HealBridge"
            android:exported="false" />
    </application>

</manifest>